################################################################################
#                            Variaveis / Variables                             #
################################################################################

NAME = libft.a

CC = gcc
CFLAGS = -Wall -Wextra -Werror

FILESC = ft_isalpha.c ft_isdigit.c
FILESO = $(FILESC:.c=.o)

################################################################################
#                             Funções / Functions                              #
################################################################################


all: $(NAME)

$(NAME): $(FILESO)
	ar rcs $(NAME) $(FILESO)

%.o : %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f $(FILESO)


fclean:
	rm -f $(NAME)

re:
	$(MAKE) fclean 
	$(MAKE) all


.PHONY: all clean fclean re
